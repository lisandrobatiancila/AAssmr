<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="3dp"
                        android:paddingStart="5dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="@color/assmrColor"
                        app:dividerThickness="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:id="@+id/edtFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Firstname"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtMiddlename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Middlename"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtLastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lastname"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtContactno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contactno"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:focusable="false"
                        android:inputType="text"/>
                    <!--ADDRESS!-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"/>
                        <Spinner
                            android:id="@+id/spinnerCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Province"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"/>
                        <Spinner
                            android:id="@+id/spinnerProvince"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barangay"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"/>
                        <Spinner
                            android:id="@+id/spinnerBarangay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <!--END ADDRESS!-->
                    <Button
                        android:id="@+id/btnSavePI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save Changes"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--CARD PERSONAL INFORMATION!-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account Information"
                        android:paddingStart="5dp"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerThickness="2dp"
                        app:dividerColor="@color/assmrColor"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Email"
                        android:focusable="false"/>
                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="12dp"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Pass******"/>
                    <Button
                        android:id="@+id/btnSaveAI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Changes"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--CARD ACCOUNT INFORMATION!-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>