<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgpropJewelImage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_launcher_background"/>
                    <TextView
                        android:id="@+id/txtpropJewelType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Realestate Type"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtpropJewelOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner"/>
            <TextView
                android:id="@+id/txtpropJewelModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model"/>
            <TextView
                android:id="@+id/txtpropJewelLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:id="@+id/btnpropJewelAssume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assume"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_50_rad"/>
                <Button
                    android:id="@+id/btnpropJewelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/button_50_rad"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>